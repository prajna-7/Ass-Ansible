global
    log         127.0.0.1 local2
    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon
    stats socket /var/lib/haproxy/stats

defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    timeout connect         5000
    timeout client          50000
    timeout server          50000

frontend http-in
    bind *:80
    mode http
    default_backend app-backend

backend app-backend
    mode http
    balance roundrobin
    server devA 10.0.129.204:5000 check
    server devB 10.0.133.67:5000 check
    server devC 10.0.138.181:5000 check
